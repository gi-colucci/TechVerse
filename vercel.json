{
    "version": 2,
    
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/node"
      },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
    
  ],
    "routes": [
      { "handle": "filesystem" }
    ] ,
    "hooks": {
      "build": "chmod +x node_modules/.bin/vite && vite build"
    }
  }